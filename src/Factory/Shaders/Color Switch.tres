code = "shader_type canvas_item;

uniform float opacity = 0;

uniform vec4 OLDCOLOR : hint_color;

uniform vec4 NEWCOLOR : hint_color;

void fragment(){
	if(texture(TEXTURE,UV)==OLDCOLOR){
		COLOR.rgb = NEWCOLOR.rgb * (1.0 - opacity) + vec3(1,1,1)*opacity;
		COLOR.a = NEWCOLOR.a;
	}
	else{
		COLOR = texture(TEXTURE,UV);
	}
}"

